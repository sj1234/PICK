<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false">
        <shape>

            <corners
                android:radius="10dp" />
            <solid
                android:color="@color/default1" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>

            <corners
                android:radius="10dp" />
            <solid
                android:color="@color/focused4" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>

            <corners
                android:radius="10dp" />
            <solid
                android:color="@color/pressed1" />
        </shape>
    </item>


</selector>