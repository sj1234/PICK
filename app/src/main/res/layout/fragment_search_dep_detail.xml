<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sjeong.pick.SearchDepDetailFragment"
    android:orientation="vertical"
    android:backgroundTint="@color/White">

    <Button
        android:id="@+id/search_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:background="@color/MainDark"
        android:text="상품명 검색"
        android:textColor="@color/White"
        android:textSize="@dimen/_15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:letterSpacing="-0.08"
            android:padding="4dp"
            android:text="상세 조건 검색"
            android:textColor="@color/MainDark"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <ImageButton
                android:id="@+id/search_detail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/confirm_id"
                android:gravity="right"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            // 은행

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.08"
                android:padding="4dp"
                android:text="은행"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/bank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_edge"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bank_text"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:text="전체"
                    android:textColor="@color/LightBlack"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|right"
                    android:text=">"
                    android:textColor="@color/LightBlack"
                    android:textSize="@dimen/_30sp" />

            </LinearLayout>

            // 기간

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="4dp"
                    android:text="기간"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/term_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:letterSpacing="-0.08"
                    android:padding="4dp"
                    android:text="0개월 이상"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/term_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progressTint="@color/PINK"
                android:thumbTint="@color/PINK" />

            // 금리

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="4dp"
                    android:text="금리"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rate_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:letterSpacing="-0.08"
                    android:padding="4dp"
                    android:text="0.00%"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/rate_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progressTint="@color/PINK"
                android:thumbTint="@color/PINK" />

            // 가입방법

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.08"
                android:padding="4dp"
                android:text="가입방법"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/join_way"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_edge"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/join_way_text"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:text="전체"
                    android:textColor="@color/LightBlack"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|right"
                    android:text=">"
                    android:textColor="@color/LightBlack"
                    android:textSize="@dimen/_30sp" />

            </LinearLayout>

            // 가입대상

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.08"
                android:padding="4dp"
                android:text="가입대상"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/join_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="개인"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

                <CheckBox
                    android:id="@+id/join_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="단체"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

                <CheckBox
                    android:id="@+id/join_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="사업자/법인"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

            </LinearLayout>

            // 복리단리

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.08"
                android:padding="4dp"
                android:text="단리복리"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="단리"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

                <CheckBox
                    android:id="@+id/sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="복리"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

            </LinearLayout>

            // 고정/변동금리

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.08"
                android:padding="4dp"
                android:text="고정/변동금리"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/fix_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="고정금리"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

                <CheckBox
                    android:id="@+id/float_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="변동금리"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

            </LinearLayout>

            // 가입한도 (최소)

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="4dp"
                    android:text="가입한도"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/min_join"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:letterSpacing="-0.08"
                    android:padding="4dp"
                    android:text="1000원"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/min_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progressTint="@color/PINK"
                android:thumbTint="@color/PINK" />

            // 우대조건

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:letterSpacing="-0.08"
                android:padding="4dp"
                android:text="우대조건"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/first_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="첫 고객"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

                <CheckBox
                    android:id="@+id/mobile_internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/PINK"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.08"
                    android:padding="5dp"
                    android:text="모바일/인터넷 가입"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_round_dark"
                android:text="초기화"
                android:textColor="@color/White"
                android:textSize="@dimen/_15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
