<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sjeong.pick.SearchDepDetailFragment"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    // 은행
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bank1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="은행"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/bank2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/bank3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=">"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    // 기간
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="기간"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/term_seekbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/term_min"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"/>

                <TextView
                    android:id="@+id/term_max"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/term_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0개월 이상"
            android:textSize="@dimen/_15sp"
            android:gravity="center"/>

    </LinearLayout>

    // 금리
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="금리"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <SeekBar
            android:id="@+id/rate_seekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/rate_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0.0%"
            android:textSize="@dimen/_15sp"
            android:gravity="center"/>

    </LinearLayout>

    // 가입방법
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/join_way1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="가입방법"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/join_way2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/join_way3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=">"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    // 가입대상
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/join_target1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="가입대상"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/join_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="개인"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/CheckTextView"
            android:gravity="center"/>

        <TextView
            android:id="@+id/join_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="단체"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/CheckTextView"
            android:gravity="center"/>

        <TextView
            android:id="@+id/join_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="사업자/법인"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/CheckTextView"
            android:gravity="center"/>

    </LinearLayout>

    // 복리단리
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="복리단리"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/com"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="단리"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/CheckTextView"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="복리"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/CheckTextView"
            android:gravity="center"/>


    </LinearLayout>

    // 가입한도 (최소) -> 후에 최대 추가
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="최소가입한도"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <SeekBar
            android:id="@+id/min_seekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

        <TextView
            android:id="@+id/min_join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0원"
            android:textSize="@dimen/_15sp"
            android:gravity="center"/>



    </LinearLayout>

    // 우대금리
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="우대조건"
            android:textSize="@dimen/_15sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/first_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="첫 고객"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/UncheckTextView"
            android:gravity="center"/>

        <TextView
            android:id="@+id/mobile_internet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="모바일/인터넷 가입"
            android:textSize="@dimen/_15sp"
            android:textColor="@color/UncheckTextView"
            android:gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="초기화"
        android:layout_marginLeft="250dp"/>


</LinearLayout>
