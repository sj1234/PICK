<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/White"
        android:elevation="0dp">

        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/back_to_main"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/back_page_dark" />

        <TextView
            android:id="@+id/title2"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/MainDark"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="20dp"
        android:stretchColumns="*"
        >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 비밀번호*"
                android:padding="10dp"
                android:textColor="@color/CheckTextView"
                android:textStyle="bold"
                />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/now_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_span="3"
                android:maxLines="1"
                android:maxLength="10"
                android:background="@drawable/menu"
                android:padding="5dp"
                android:hint="PASSWORD"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 비밀번호"
                android:padding="10dp"
                android:textColor="@color/CheckTextView"
                android:textStyle="bold"
                />
</TableRow>
        <TableRow>
            <EditText
                android:id="@+id/new_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_span="3"
                android:maxLines="1"
                android:maxLength="10"
                android:background="@drawable/menu"
                android:padding="5dp"
                android:hint="NEW PASSWORD"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 비밀번호 확인"
                android:padding="10dp"
                android:textColor="@color/CheckTextView"
                android:textStyle="bold"
                />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/new_pw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_span="3"
                android:maxLines="1"
                android:maxLength="10"
                android:background="@drawable/menu"
                android:padding="5dp"
                android:hint="NEW PASSWORD CONFIRM"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail*"
                android:padding="10dp"
                android:textColor="@color/CheckTextView"
                android:textStyle="bold"
                />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_span="3"
                android:maxLines="1"
                android:maxLength="20"
                android:background="@drawable/menu"
                android:padding="5dp"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/round_round_dark"
            android:text="저장"
            android:textColor="@color/White"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>