<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sjeong.pick.MainActivity"
    android:orientation="vertical"
    android:background="@color/BackGround">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageButton
            android:id="@+id/menu_logout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_btn_menu_signout_24"
            android:background="@color/Alpha"
            android:layout_gravity="center_vertical|left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/TextDark"
            android:letterSpacing="0.3"
            android:layout_gravity="center"
            android:text="PICK"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/menu_setting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_settings_24"
            android:scaleType="centerInside"
            android:background="@color/Alpha"
            android:layout_gravity="center_vertical|right"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.lsjwzh.widget.recyclerviewpager.LoopRecyclerViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:clipToPadding="false"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_gravity="center"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">

        <LinearLayout
            android:id="@+id/menu_dep"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:background="@drawable/menu"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="맞춤 예금 검색" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_sav"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/menu"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="맞춤 적금 검색" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_cac"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/menu"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="금리 계산기" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/menu_goal"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:background="@drawable/menu"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="목표치" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_int"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/menu"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="11dp"
                android:letterSpacing="-0.03"
                android:text="관심상품"
                android:textColor="@color/Black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_faq"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/menu"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_07" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="FAQ" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
